# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Database connection (uncomment the one you're using)
# PostgreSQL
# DB_CONNECTION_STRING=postgresql://username:password@localhost:5432/database_name

# MySQL
# DB_CONNECTION_STRING=mysql+pymysql://username:password@localhost:3306/database_name

# SQLite (default sample database)
DB_CONNECTION_STRING=sqlite:///sample.db

# Azure OpenAI (if using)
# AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# AnythingLLM (if using)
# ANYTHING_LLM_URL=https://your-anythingllm-endpoint.com/api/v1/openai/chat/completions
# ANYTHING_LLM_API_KEY=your_anythingllm_api_key_here
# ANYTHING_LLM_MODEL=demo
# ANYTHING_LLM_SYSTEM_PROMPT=You are an expert SQL agent that helps users analyze their database by translating their natural language questions into SQL queries. 